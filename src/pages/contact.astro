---

<style>
  .container {
    width: 100%;
    max-width: 640px;
    margin: 0 auto;
  }
</style>

<Layout title="Contact" path="/contact">
  <div class="container">
    <main>
      <iframe
        style="border:none;width:100%;"
        height="710px"
        src="https://www.noway-form.com/ja/f/41b1d91e-7601-40a7-86df-b2c7208f4666/embed"
      ></iframe>
    </main>
  </div>
</Layout>
<style>
  .container {
    width: 640px;
    max-width: 100%;
    margin: 0 auto;
  }
  .container > main {
    margin-bottom: 40px;
  }
  .container div:last-child {
    margin-bottom: 0;
  }
  .container h2 {
    margin: 0 0 14px;
    font-size: 1.4rem;
    font-weight: 400;
  }
  .container p {
    margin: 0.3rem auto;
    line-height: 2rem;
  }
</style>
